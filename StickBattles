-- LocalScript inside StarterPlayerScripts

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Create main ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Utility function to create buttons
local function createButton(text, position, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 220, 0, 50)
    button.Position = position
    button.Text = text
    button.Parent = screenGui
    button.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
    button.TextScaled = true
    button.MouseButton1Click:Connect(callback)
    return button
end

-- Button: Spawn KingPig
createButton("Spawn KingPig", UDim2.new(0.5, -110, 0.7, 0), function()
    local kingPigModel = replicatedStorage:FindFirstChild("Assets")
        and replicatedStorage.Assets:FindFirstChild("Models")
        and replicatedStorage.Assets.Models:FindFirstChild("PetAssets")
        and replicatedStorage.Assets.Models.PetAssets:FindFirstChild("KingPig")

    if kingPigModel then
        local clonedPig = kingPigModel:Clone()
        clonedPig.Parent = player.Backpack
        print("KingPig added to Backpack!")
    else
        warn("KingPig not found in ReplicatedStorage!")
    end
end)

-- Button: Spawn Rainbow Poop (13000 kg)
createButton("Spawn Rainbow Poop", UDim2.new(0.5, -110, 0.8, 0), function()
    local poopModel = replicatedStorage:FindFirstChild("Assets")
        and replicatedStorage.Assets:FindFirstChild("Models")
        and replicatedStorage.Assets.Models:FindFirstChild("PoopAssets")
        and replicatedStorage.Assets.Models.PoopAssets:FindFirstChild("Snake Poop")

    if poopModel then
        local clonedPoop = poopModel:Clone()
        clonedPoop.Name = "Snake Poop (1300Kg) [Rainbow]"
        clonedPoop.Parent = player.Backpack
        print("Rainbow Poop added to Backpack!")
    else
        warn("Rainbow Poop model not found in ReplicatedStorage!")
    end
end)
