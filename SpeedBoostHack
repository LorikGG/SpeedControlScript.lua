local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpeedControlGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

local background = Instance.new("Frame")
background.Size = UDim2.new(0.3, 0, 0.25, 0)
background.Position = UDim2.new(0.08, 0, 0.19, 0)
background.BackgroundColor3 = Color3.fromRGB(92, 255, 144)
background.BorderSizePixel = 2
background.Parent = screenGui

local speedButton = Instance.new("TextButton")
speedButton.Size = UDim2.new(0.66, 0, 0.2, 0)
speedButton.Position = UDim2.new(0.17, 0, 0.15, 0)
speedButton.Text = "Increase Speed"
speedButton.Parent = background

local resetButton = Instance.new("TextButton")
resetButton.Size = UDim2.new(0.66, 0, 0.2, 0)
resetButton.Position = UDim2.new(0.17, 0, 0.55, 0)
resetButton.Text = "Reset Speed"
resetButton.Parent = background

speedButton.MouseButton1Click:Connect(function()
    humanoid.WalkSpeed = humanoid.WalkSpeed + 10
end)

resetButton.MouseButton1Click:Connect(function()
    humanoid.WalkSpeed = 16
end)
